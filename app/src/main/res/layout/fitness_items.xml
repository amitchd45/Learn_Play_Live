<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fitness_item_lay"
    android:layout_marginBottom="@dimen/space5"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/space15"
        android:elevation="@dimen/space10"
        android:layout_marginRight="@dimen/space5"
        android:layout_marginLeft="@dimen/space5"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="-23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fitness_sleep_bg"
            android:id="@+id/fitness_bg_img"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fitness_sleep"
            android:layout_centerInParent="true"
            android:id="@+id/fitness_img"
            />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:textSize="@dimen/text16"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/space5"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/fitness_heading"


            />
            <TextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plus sleep stages"
                android:layout_marginBottom="@dimen/space10"
                android:textSize="@dimen/text12"
                android:layout_marginLeft="@dimen/space5"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/fitness_description"


                />
            <LinearLayout
                android:id="@+id/subAddedText"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/space10"
                android:layout_marginLeft="@dimen/space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space16"
                android:layout_height="@dimen/space16"
                android:id="@+id/color_img"
                android:layout_gravity="center"
                android:src="@drawable/exercise_color_icon"/>

            <TextView
                android:id="@+id/addedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text14"
                android:text="Added"
                android:layout_gravity="center"
                android:textColor="@color/orange"
                android:layout_toRightOf="@id/color_img"
                android:layout_marginLeft="@dimen/space5"
                />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>