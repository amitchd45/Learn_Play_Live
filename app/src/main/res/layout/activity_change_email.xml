        <TextView
            android:layout_marginTop="@dimen/space50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text10"
            android:gravity="center"
            android:text="We will send you an Email to verify your new email address."/>
        <Button
            android:layout_marginTop="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space55"
            android:text="Change"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text14"
            android:padding="@dimen/space10"
            android:id="@+id/changeEmailBtn"
            android:layout_marginBottom="@dimen/space30"/>



    </LinearLayout>

</LinearLayout>