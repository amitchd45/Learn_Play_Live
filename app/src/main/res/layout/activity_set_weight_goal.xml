<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeBottom.Weight.Activity.SetWeightGoalActivity">

    <include  layout="@layout/topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text16"
        android:textColor="@color/black"
        android:text="Let's do this!"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space20"
        android:gravity="center"/>


        <RelativeLayout
            android:layout_width="@dimen/space100"
            android:layout_height="@dimen/space100"
            android:background="@drawable/dotted_stroke"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space30">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weight_png"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text12"
            android:textColor="@color/black"
            android:text="Do you want to..."
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space30"
            android:gravity="center"/>

        <Button
            android:id="@+id/weightGoalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text12"
            android:textColor="@color/black"
            android:text="Lose"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space50"
            android:background="@drawable/light_button"
            android:gravity="center"/>

        <Button
            android:id="@+id/gain_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text12"
            android:textColor="@color/black"
            android:text="Gain"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space20"
            android:background="@drawable/light_button"
            android:gravity="center"/>
        <Button
            android:id="@+id/maintain_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text12"
            android:textColor="@color/black"
            android:text="Maintain"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space20"
            android:background="@drawable/light_button"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>