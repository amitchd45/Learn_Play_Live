<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:layout_marginTop="@dimen/space5">



    <ImageView
        android:layout_width="@dimen/space150"
        android:layout_height="@dimen/space150"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_man_user"
            android:paddingLeft="@dimen/space10"
            android:hint="Full Name"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginTop="@dimen/space20"
            android:drawablePadding="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_close_envelope"
            android:paddingLeft="@dimen/space10"
            android:hint="Email"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/space20"
            android:drawablePadding="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_locked_padlock"
            android:paddingLeft="@dimen/space10"
            android:hint="Password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/space20"
            android:drawablePadding="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            />

        <EditText
            android:id="@+id/userConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_locked_padlock"
            android:paddingLeft="@dimen/space10"
            android:hint="Confirm Password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/space20"
            android:drawablePadding="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/space55"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_marginTop="@dimen/space30"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text18"
            android:padding="@dimen/space10"
            android:id="@+id/btn_register_register"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/space10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have an account ?"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            android:layout_marginLeft="@dimen/space3"
            android:id="@+id/tv_login_register"
            android:textStyle="bold"
            android:padding="@dimen/space3"/>


    </LinearLayout>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>