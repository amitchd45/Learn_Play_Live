<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerificationActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space20"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:layout_marginTop="@dimen/space5">



    <ImageView
        android:layout_width="@dimen/space150"
        android:layout_height="@dimen/space150"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_verify"
            android:textColor="@color/black"
            android:textSize="@dimen/text16"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space10"
            android:fontFamily="@font/poppins_regular"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Verification Code"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space10"
            android:gravity="center"
            android:layout_marginTop="@dimen/space30">

            <EditText

                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space40"
                android:background="@drawable/round_et_green"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text18"
                android:inputType="number"
                android:maxLines="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLength="1"
                android:id="@+id/otp1"
                />

            <EditText
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space40"
                android:background="@drawable/round_et_green"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text18"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:layout_gravity="center"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/space10"
                android:id="@+id/otp2"/>

            <EditText
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space40"
                android:background="@drawable/round_et_green"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text18"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:layout_gravity="center"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/space10"
                android:id="@+id/otp3"/>

            <EditText
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space40"
                android:background="@drawable/round_et_green"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text18"
                android:gravity="center"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLines="1"
                android:layout_gravity="center"
                android:maxLength="1"
                android:layout_marginLeft="@dimen/space10"
                android:id="@+id/otp4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space30"
            android:id="@+id/lay_resend_code"
            android:layout_marginBottom="@dimen/space20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend Code"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/tv_resend_code"
                android:gravity="center"
                android:layout_marginTop="@dimen/space10"/>

            <View
                android:layout_width="@dimen/space80"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/space55"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_marginTop="@dimen/space50"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text18"
            android:padding="@dimen/space10"
            android:id="@+id/btn_submit_verify"
            android:layout_marginBottom="@dimen/space30"/>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>