        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            app:cardCornerRadius="@dimen/space5"
            android:elevation="@dimen/space10"
            android:padding="@dimen/space5"
            android:layout_marginLeft="@dimen/space8"
            android:layout_marginRight="@dimen/space8"

            >

            <TextView
                android:id="@+id/AdditionOption_Tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space50"
                android:padding="@dimen/space10"
                android:gravity="center_vertical"
                android:background="@drawable/colorless"
                android:text="Additional Options"
                android:textSize="@dimen/space14"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_regular"

                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
