<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Drawer.PrivacyActivity">

    <include layout="@layout/topbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space20"
            android:layout_marginLeft="@dimen/space20"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text14"
                android:textColor="@color/black"
                android:text="Personal Info"/>



    <!--            <ImageView-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:src="@drawable/ic_lock_privacy"/>-->
                <TextView
                    android:id="@+id/picturePrivacyTv"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/space14"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_lock_privacy"
                    android:padding="@dimen/space10"
                    android:drawablePadding="@dimen/space20"
                    android:text="Pictures"/>
                <TextView
                    android:layout_marginTop="@dimen/space5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/space14"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_lock_privacy"
                    android:padding="@dimen/space10"
                    android:drawablePadding="@dimen/space20"
                    android:text="Birthday"/>
                <TextView
                    android:layout_marginTop="@dimen/space5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/space14"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_lock_privacy"
                    android:padding="@dimen/space10"
                    android:drawablePadding="@dimen/space20"
                    android:text="Sex"/>
                <TextView
                    android:layout_marginTop="@dimen/space5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/space14"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_lock_privacy"
                    android:padding="@dimen/space10"
                    android:drawablePadding="@dimen/space20"
                    android:text="Height"/>
                <TextView
                    android:layout_marginTop="@dimen/space5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/space14"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_lock_privacy"
                    android:padding="@dimen/space10"
                    android:drawablePadding="@dimen/space20"
                    android:text="Weight"/>
            <TextView
                android:layout_marginTop="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/space14"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_lock_privacy"
                android:padding="@dimen/space10"
                android:drawablePadding="@dimen/space20"
                android:text="Location"/>
            <TextView
                android:layout_marginTop="@dimen/space5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/space14"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_lock_privacy"
                android:padding="@dimen/space10"
                android:drawablePadding="@dimen/space20"
                android:text="Friends"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

