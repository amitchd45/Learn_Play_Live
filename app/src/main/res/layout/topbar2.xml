<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space8"
    android:padding="@dimen/space5">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back2"
        android:id="@+id/back_topbar2"
        android:padding="@dimen/space5"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text14"
        android:textColor="@color/white"
        android:id="@+id/tv_header2"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginRight="@dimen/space40"
        android:layout_centerVertical="true"
        android:src="@drawable/setting_topbar"
        android:id="@+id/setting_topbar2"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:padding="@dimen/space5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/timer_topbar"
        android:id="@+id/timer_topbar2"
        android:visibility="gone"
        android:padding="@dimen/space5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_topbar"
        android:id="@+id/add_topbar2"
        android:visibility="gone"
        android:padding="@dimen/space5"/>




</RelativeLayout>