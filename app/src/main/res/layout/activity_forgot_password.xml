<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/space20">

        <ImageView
            android:layout_width="@dimen/space150"
            android:layout_height="@dimen/space150"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Registered Email"
            android:textSize="@dimen/text16"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space40"
            android:layout_marginLeft="@dimen/space10"/>

        <EditText
            android:id="@+id/email_forgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_close_envelope"
            android:paddingLeft="@dimen/space10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_marginTop="@dimen/space40"
            android:drawablePadding="@dimen/space20"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text16"
            />

        <Button
            android:id="@+id/btnSentOtpForgotPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space55"
            android:layout_marginTop="@dimen/space40"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/space10"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/text18" />

    </LinearLayout>

</LinearLayout>